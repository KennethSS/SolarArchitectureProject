<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_youtube_img"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_youtube_profile_thumbnail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@id/item_youtube_img"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars">
        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_youtube_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:text="abcd"
            app:layout_constraintStart_toEndOf="@id/item_youtube_profile_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_youtube_profile_thumbnail"
            tools:text="@tools:sample/full_names"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_youtube_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:text="abcd"
            app:layout_constraintStart_toEndOf="@id/item_youtube_profile_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_youtube_title"
            tools:text="@tools:sample/full_names"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>